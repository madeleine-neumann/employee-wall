<section class="employees">
  <%= image_tag  "9elogo.png", class: "employees__logo" %>
  <%= image_tag  "cup-of-coffee.png", class: "employees__coffee-cup" %>
  <% @employees.each do |employee| %>
    <div class="employees__polaroid my-4 mx-2">
      <p>
        <%=link_to employee_path(employee), class: 'accent' do %>
          <%= image_tag employee.avatar, class: 'employees__photo' %>
          <p class="employees__name"><%= employee.name %></p>
        <%end %>
      </p>

    </div>


  <% end %>

</section>
